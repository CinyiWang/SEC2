<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="nju.edu.cinema.data.management.ScheduleMapper">
    <insert id="insertRefundStrategy" parameterType="nju.edu.cinema.po.RefundStrategy"
            useGeneratedKeys="true" keyProperty="id">
        insert into refund_strategy(refundable, name, available_time, charge)
        values(#{refundable}, #{name}, #{availableTime}, #{charge})
    </insert>

    <select id="selectAllStrategies" resultMap="Strategy">
        select * from refund_strategy
    </select>
    <select id="selectStrategyById" resultMap="Strategy">
        select * from refund_strategy where id = #{hallId}
    </select>

    <update id="updateRefundStrategy" parameterType="Strategy">
        update refund_strategy set `refundable` = #{refundable},
        `available_time` = #{availableTime}, `name` = #{name}, charge = #{charge}
        where id = #{id}
    </update>

    <delete id="deleteStrategy">
        delete from refund_strategy where #{id} = id
    </delete>

    <resultMap id="Strategy" type="nju.edu.cinema.po.RefundStrategy">
    </resultMap>
</mapper>